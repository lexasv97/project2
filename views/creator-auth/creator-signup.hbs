<div id="form">
  <h2>Create a Brand Profile</h2>
  <form action="/creator-auth/creator-signup" method="POST">

    <label> Full Name:
      <input type="text" name="fullName" placeholder="ironhacker" />
    </label>

    <label> Email:
      <input type="email" name="email" placeholder="ironhack@ironhack.com" />
    </label>

    <label> Password:
      <input type="password" name="password" placeholder="********" />
    </label>

    <label> Occupation:

    <select value=“Occupation:” onChange={handleFilter}>
          <option value="you-name-it">You name it</option>
          <option value="yoga">Yoga</option>
          <option value="crossfit">Crossfit</option>
          <option value="dancing">Dancing</option> 
    </select>
    </label>

    <button type="submit">Create account</button>

     <input type="reset" value="Reset">

<div>
    <div>Already have an account?</div>
    <a href="/creator-auth/creator-login">Log in</a>
</div>

    {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
    {{/if}}

  </form>
</div>