{{#if user}}

<div>

    <h1>Welcome, {{ user.fullName }}!</h1>
    <img src="{{user.profileImage}}" alt="user-image"/>
    <a class="button" href="/user/update-user-profile">Update Profile</a>

    <a class="button" href="/lessons/find">Find a Lesson</a>

    {{#if paidLessons}}

    <hr>
    <div class="center">
        <h2>Paid lessons</h3>
    </div>

    <div class="lesson">

        {{#each paidLessons}}

        <div>

            <h3>{{name}}</h3>

            <img src={{imageUrl}} alt="lesson">

            <p>Format: {{format}}</p>

            <p>Added by: {{owner.fullName}}</p>

        </div>

        {{/each}}

    </div>

    {{/if}}

</div>

{{/if}}