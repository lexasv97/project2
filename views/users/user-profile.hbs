{{#if user}}
<h1>Welcome, {{ user.fullName }}!</h1>
<div>
    <div class="lesson-details">
        <div class="lesson-name-picture">
            <img src="{{user.profileImage}}" alt="user-image" />
        </div>
        <div class="lesson-info">
            <a class="button" href="/user/update-user-profile">Update Profile</a>

            <a class="button" href="/lessons/find">Find a Lesson</a>
        </div>
    </div>
    {{#if paidLessons}}

    <hr>
    <div class="center">
        <h2>Paid lessons</h3>
    </div>

    <div class="lesson">

        {{#each paidLessons}}

        <div class="column">

            <h3>{{name}}</h3>

            <img src={{imageUrl}} alt="lesson">

            <p>Format: {{format}}</p>

            <p>Added by: {{owner.fullName}}</p>

        </div>

        {{/each}}

    </div>

    {{else}}

    <hr>

    <div class="center">
        <p>You paid lessons will appear here</p>
    </div>

    {{/if}}

</div>

{{/if}}