<div class="center">
    <h2>Lesson details</h2>
</div>

{{#if isOwner}}
<p class="mini-nav">
    <a href="/lessons/new">Add a new lesson</a>
    <a href="/lessons/edit/{{lesson._id}}">Edit lesson</a>
    <a href="/lessons/delete/{{lesson._id}}">Delete lesson</a>
</p>

{{/if}}

<div>

    <div class="lesson-details">

        <div class="lesson-name-picture">

            <h3>{{lesson.name}}</h3>

            <img src={{lesson.imageUrl}} alt="lesson">

        </div>

        <div class="lesson-info">

            <p>{{lesson.description}}</p>

            <p>Format: {{lesson.format}}</p>

            <p>Added by: {{lesson.owner.fullName}}</p>

            <p>Price: ${{lesson.price}}</p>

            {{#unless isOwner}}

            <button><a class="font-white" href="/stripe/{{lesson._id}}">Buy lesson</a></button>

            {{/unless}}

        </div>

    </div>

    {{#if isUserLoggedIn}}

    <hr>

    <h4>Leave a review</h4>
    <form id="review" action="/reviews/new/{{lesson._id}}" method="post">
        <label>Rating: </label>
        <select value="rating" name="rating">
            <option value="5">5</option>
            <option value="4">4</option>
            <option value="3">3</option>
            <option value="2">2</option>
            <option value="1">1</option>
        </select>
        <label for="review">Review:</label>
        <input type="text" name="comment">
        <button type="submit">Submit Review</button>
    </form>

    {{/if}}

    {{#unless isUserLoggedIn}}
    <div class="center">
        <p>Log in to leave a review.
            <a href="/user-auth/user-login">Log in</a>
        </p>
    </div>
    {{/unless}}

    {{#if lesson.reviews}}

    <div class="center">
        <h2>Reviews:</h2>
    </div>

    {{#each lesson.reviews}}

    <p>Rating: {{rating}}. Comment: {{comment}}</p>

    <h6>- {{user.fullName}}</h6>

    {{/each}}

    {{else}}

    <div class="center">
        <p>No reviews yet</p>
    </div>

    <hr>

    {{/if}}
</div>