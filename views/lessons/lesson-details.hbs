<h2>Lesson details</h2>
<div>

    <h3>{{lesson.name}}</h3>

    <img src={{lesson.imageUrl}} alt="lesson">

    <p>{{lesson.description}}</p>

    <p>Added by: {{lesson.owner.fullName}}</p>

    {{#if isOwner}}

    <a href="/lessons/edit/{{lesson._id}}">Edit lesson</a>
    <a href="/lessons/delete/{{lesson._id}}">Delete lesson</a>

    {{/if}}

    <hr>

    {{#unless isOwner}}

    <h4>Leave a review</h4>
    <form id="review" action="/reviews/new/{{lesson._id}}" method="post">

        <label> Rating:
            <select value=“” onChange={handleFilter}>
                <option value="5">5</option>
                <option value="4">4</option>
                <option value="3">3</option>
                <option value="2">2</option>
                <option value="1">1</option>
            </select>
        </label>
        <label for="review">Review:</label>
        <input type="text" name="comment" id="review">
        <button type="submit">Submit Review</button>
    </form>

    {{/unless}}


    {{#if reviews}}

    {{#each reviews}}

    <p>{{comment}}</p>
    <h6>- {{creator.fullName}}</h6>

    {{/each}}

    {{else}}

    <p>No reviews yet</p>

    {{/if}}
</div>