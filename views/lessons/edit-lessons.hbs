<h2>Edit lesson</h2>

<form action="/lessons/edit/{{_id}}" method="post">

    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="{{name}}">

    <label for="description">Description</label>
    <input type="text" name="description" id="description" value="{{description}}">

    <label for="price">Edit price: </label>
    <input type="number" name="price" id="price" value="${{price}}">

    <label for="imageUrl">Change image</label>
    <input type="text" name="imageUrl" id="imageUrl" value="{{imageUrl}}">

    <label for="format">Edit format: </label>
     <select name="format" value="format">
          <option value="online">Online</option>
          <option value="in-person">In-person</option>
    </select>

    <button type="submit">Edit lesson</button>

</form>